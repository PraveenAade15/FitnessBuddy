<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonArticle"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button_white"
            android:shadowColor="#100C0C"
            android:text="View Articles"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonViewLogs" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="374dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:text='"All Progress Takes Place Outside The Comfort Zone"'
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonViewLogs"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button_white"
            android:shadowColor="#100C0C"
            android:text="View Logs"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCalculateBMI" />

        <Button
            android:id="@+id/buttonCalculateBMI"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button_white"
            android:text="Calculate BMI"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddLog" />

        <Button
            android:id="@+id/buttonAddLog"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button_white"
            android:text="Add log"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>